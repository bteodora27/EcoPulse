<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/reward_card_bg"
    android:layout_marginBottom="12dp">

    <!-- IMAGINEA -->
    <ImageView
        android:id="@+id/reward_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rounded_image"
        android:clipToOutline="true"/>

    <!-- TEXTURILE (în dreapta imaginii) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- PUNCTELE — MEREU PRIMELE -->
        <TextView
            android:id="@+id/tv_reward_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350 Puncte"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- TITLUL BENEFICIULUI -->
        <TextView
            android:id="@+id/tv_reward_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Margherita"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- PARTENER (cine oferă recompensa) -->
        <TextView
            android:id="@+id/tv_reward_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italiano"
            android:textColor="#777"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <!-- DATA EXPIRĂRII -->
        <TextView
            android:id="@+id/tv_reward_expires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiră în 3 zile"
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</LinearLayout>
