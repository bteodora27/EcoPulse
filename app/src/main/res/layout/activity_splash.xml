<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F4"
    tools:context=".splash.SplashActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_logo_graphic"
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="EcoPulse Logo"

            android:src="@drawable/logo_ecopulse_graphic"

            app:tint="#40826D" />

        <TextView
            android:id="@+id/splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.1"
            android:text="ECOPULSE"
            android:textColor="#333333"
            android:textSize="31sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/splash_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THE PLANET PAYS BACK"
            android:textColor="#555555"
            android:textSize="14sp"
            android:letterSpacing="0.2" />
    </LinearLayout>

</RelativeLayout>