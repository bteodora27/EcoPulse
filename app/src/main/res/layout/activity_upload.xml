<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".profile.UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Încarcă Dovada"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Poza 'Before'"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <ImageView
            android:id="@+id/img_before"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add"/>

        <Button
            android:id="@+id/btn_add_before"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaugă Poza 'Before'"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Poza 'After'"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <ImageView
            android:id="@+id/img_after"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add"/>

        <Button
            android:id="@+id/btn_add_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaugă Poza 'After'"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Poza cu Sacii"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <ImageView
            android:id="@+id/img_bags"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add"/>

        <Button
            android:id="@+id/btn_add_bags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adaugă Poza cu Sacii"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Numărul de saci strânși">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bag_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_submit_cleanup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:text="Trimite spre validare"
            app:backgroundTint="@color/eco_green"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>